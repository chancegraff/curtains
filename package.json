{
  "name": "curtains",
  "version": "1.1.8",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "curtains": "./bin/curtains"
  },
  "scripts": {
    "build": "tsc && npm run copy:templates && npm run build:bin",
    "copy:templates": "mkdir -p dist/src/templates && cp src/templates/style.css dist/src/templates/",
    "build:bin": "chmod +x bin/curtains",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'âœ“ Build complete. CLI ready at bin/curtains'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "dev": "npm run build:watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "start": "node bin/curtains",
    "cli": "node bin/curtains",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:cli": "npm run build && node bin/curtains --help"
  },
  "author": "chancegraff",
  "license": "ISC",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chancegraff/curtains.git"
  },
  "keywords": [
    "presentation",
    "slides",
    "markdown",
    "slideshow",
    "html",
    "static-site-generator",
    "markdown-to-html",
    "cli",
    "presentation-tool",
    "markdown-slides",
    "curtains",
    "keynote",
    "powerpoint",
    "reveal-alternative",
    "self-contained",
    "offline-presentations",
    "markdown-converter",
    "slide-deck",
    "public-speaking",
    "conference-talks"
  ],
  "description": "Build beautiful HTML presentations from Markdown with custom styling, containers, and keyboard navigation",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "rehype": "^13.0.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "zod": "^4.0.17"
  }
}
