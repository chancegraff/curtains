{
  "name": "curtains",
  "version": "2.0.2",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "curtains": "./dist/curtains-cli.cjs"
  },
  "scripts": {
    "build": "npm run build:esbuild",
    "build:esbuild": "node esbuild.config.js",
    "build:tsc": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'âœ“ Build complete. CLI ready at dist/curtains-cli.js'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/lib/**/*.ts src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "dev": "npm run build:watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "start": "node bin/curtains",
    "cli": "node bin/curtains",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:cli": "npm run build && node bin/curtains --help"
  },
  "author": "chancegraff",
  "license": "ISC",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chancegraff/curtains.git"
  },
  "keywords": [
    "presentation",
    "slides",
    "markdown",
    "slideshow",
    "html",
    "static-site-generator",
    "markdown-to-html",
    "cli",
    "presentation-tool",
    "markdown-slides",
    "curtains",
    "keynote",
    "powerpoint",
    "reveal-alternative",
    "self-contained",
    "offline-presentations",
    "markdown-converter",
    "slide-deck",
    "public-speaking",
    "conference-talks"
  ],
  "description": "Build beautiful HTML presentations from Markdown with custom styling, containers, and keyboard navigation",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "commander": "^14.0.0",
    "rehype": "^13.0.2",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "zod": "^4.1.3"
  }
}
