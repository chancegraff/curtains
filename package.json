{
  "name": "curtains",
  "version": "1.1.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "curtains": "./bin/curtains"
  },
  "scripts": {
    "build": "tsc && npm run build:bin",
    "build:bin": "chmod +x bin/curtains",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'âœ“ Build complete. CLI ready at bin/curtains'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "dev": "npm run build:watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "start": "node bin/curtains",
    "cli": "node bin/curtains",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cli": "npm run build && node bin/curtains --help"
  },
  "author": "chancegraff",
  "license": "ISC",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chancegraff/curtains.git"
  },
  "keywords": [],
  "description": "",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "rehype": "^13.0.2",
    "remark": "^15.0.1",
    "zod": "^4.0.17"
  }
}
